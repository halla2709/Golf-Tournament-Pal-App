<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.halla.golftournamentpal">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/golfer"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MatchPlayCreator" />
        <activity android:name=".views.ScoreboardCreator" />
        <activity android:name=".views.ParticipantAdder" />
        <activity android:name=".views.Results" />
        <activity android:name=".views.HomeActivity" />
        <activity android:name=".views.MatchPlayInfo" />
        <activity android:name=".views.ScoreboardInfo" />
        <activity android:name=".views.Brackets" />
        <activity
            android:name=".views.PlayOffTree"
            android:label="@string/title_activity_play_off_tree"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.LogInActivity" />
    </application>

</manifest>
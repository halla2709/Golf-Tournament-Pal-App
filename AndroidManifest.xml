<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.halla.golftournamentpal">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/golfball"
        android:label="@string/app_name_shortcut"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.LogInActivity"
            android:icon="@drawable/golfball"
            android:label="@string/app_name_shortcut"
            android:theme="@style/AppTheme.NoDrawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".views.ResultsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".views.MatchPlayCreatorActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoDrawer"/>
        <activity
            android:name=".views.RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoDrawer"/>
        <activity
            android:name=".views.ScoreboardCreatorActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoDrawer"/>
        <activity
            android:name=".views.ScoreInputViewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoDrawer"/>
        <activity
            android:name=".views.ParticipantAdderMainScoreboardActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".views.ParticipantAdderMainMatchPlayActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".views.BracketsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.MatchPlayInfoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.MyFriendsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.MyProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.MyTournamentsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.PlayOffTreeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.ScoreboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.ScoreboardInfoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.FriendProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:orientation="horizontal"
            android:rowCount="3"
            android:id="@+id/friend_list_layout"
            android:background="@drawable/participant"
            android:gravity="center"
            android:padding="5dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="friend name"
        android:id="@+id/friendName"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/mainTextColor"
        android:layout_columnSpan="6"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        />

    <ImageView
        android:id="@+id/closeItem"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:onClick="closeListItem"
        app:srcCompat="@drawable/close"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="3"/>

    <TextView
        android:id="@+id/friendSocials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/SSN2"
        android:textColor="@color/mainTextColor"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        />

    <TextView
        android:id="@+id/friendSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="friend social number"
        android:textColor="@color/mainTextColor"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/friendHandicaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/handicap2"
        android:textColor="@color/mainTextColor"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        />

    <TextView
        android:id="@+id/friendHandicap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="friend handicap"
        android:textColor="@color/mainTextColor"
        android:layout_marginLeft="5dp"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        />

</GridLayout>
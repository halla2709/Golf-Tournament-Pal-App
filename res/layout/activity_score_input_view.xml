                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h9"
                              android:textColor="@color/buttonTextColor"
                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h10"
                              android:textColor="@color/buttonTextColor"
                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h11"
                              android:textColor="@color/buttonTextColor"
                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h12"
                              android:textColor="@color/buttonTextColor"
                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h13"
                              android:textColor="@color/buttonTextColor"
                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h14"

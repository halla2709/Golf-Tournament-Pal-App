                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h15"
                              android:textColor="@color/buttonTextColor"
                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h16"
                              android:textColor="@color/buttonTextColor"
                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h17"
                              android:textColor="@color/buttonTextColor"
                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/h18"
                              android:textColor="@color/buttonTextColor"
                              android:gravity="start"
                              android:textSize="25dp"
                              android:background="@color/colorPrimaryDark"
                              android:padding="8dp"/>
                      </TableRow>
                     <TableRow>
                         <EditText
                             android:id="@+id/h1"
                             android:inputType="number"/>
                         <EditText
                             android:id="@+id/h2"
                             android:inputType="number"/>
                         <EditText
                             android:id="@+id/h3"
                             android:inputType="number"/>
                         <EditText
                             android:id="@+id/h4"
                             android:inputType="number"/>
                         <EditText
                             android:id="@+id/h5"
                             android:inputType="number"/>
                         <EditText
                             android:id="@+id/h6"
                             android:inputType="number"/>
                         <EditText

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/activity_home"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  android:layout_marginTop="50dp"
                  tools:context="com.example.halla.golftournamentpal.views.MainActivity">

        <TextView
            android:id="@+id/homeText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/homeTexts"
            android:textColor="@color/mainTextColor"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/golfer"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/loggedinas"
            android:textColor="@color/secondaryTextColor"
            android:textSize="20sp"
            android:id="@+id/welcome"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/chooseaction"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            android:id="@+id/textView4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/myprofilebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/colorPrimaryDark"
                android:onClick="myprofile"
                android:text="@string/mypagebutton"
                android:layout_marginBottom="10dp"
                android:textColor="@color/buttonTextColor"/>

            <Button
                android:id="@+id/myfriendsbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:onClick="myfriends"
                android:text="@string/myfriends"
                android:textColor="@color/buttonTextColor"/>

            <Button
                android:id="@+id/mytournamentsbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:onClick="mytournaments"
                android:text="@string/mytournaments"
                android:textColor="@color/buttonTextColor"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
